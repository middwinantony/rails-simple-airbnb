<div class="container my-5" style="max-width: 600px;">
  <h1 class="fw-bold mb-4 text-center">Add a New Listing</h1>

  <%= form_with model: @flat, local: true, class: "shadow p-4 bg-light rounded" do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Flat name" %>
    </div>

    <div class="mb-3">
      <%= f.label :address, class: "form-label" %>
      <%= f.text_field :address, class: "form-control", placeholder: "123 Main St, City" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_field :description, class: "form-control", placeholder: "describe the listing here" %>
    </div>

    <div class="mb-3">
      <%= f.label :price_per_night, class: "form-label" %>
      <%= f.text_field :price_per_night, class: "form-control", placeholder: "Enter the price per night here" %>
    </div>

    <div class="mb-3">
      <%= f.label :number_of_guests, class: "form-label" %>
      <%= f.number_field :number_of_guests, class: "form-control", placeholder: "Enter the number of guests here" %>
    </div>

    <div class="text-center">
      <%= f.submit "Create Listing", class: "btn btn-success w-100 py-2 fw-semibold" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <%= link_to "Back to Listings", flats_path, class: "text-secondary" %>
  </div>
</div>
